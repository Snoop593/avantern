{
  "name": "alfa-leasing-requests-ui",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "predocker-build": "npm i --unsafe-perm",
    "prearchive-build": "npm i --unsafe-perm",
    "docker-build": "arui-scripts docker-build",
    "archive-build": "arui-scripts archive-build",
    "start": "arui-scripts start",
    "build": "arui-scripts build",
    "lint-css": "stylelint ./src/**/*.css",
    "lint-js": "eslint ./*.js ./src/ ./config/ --ext .js,.jsx,.ts,.tsx",
    "lint": "npm run lint-css && npm run lint-js",
    "test-scripts": "arui-scripts test",
    "test": "npm run lint && npm run test-scripts"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "arui-presets-lint": "^2.0.1",
    "arui-scripts": "^5.6.1",
    "boom": "^7.3.0",
    "copy-webpack-plugin": "^5.1.1",
    "ejs-compiled-loader": "^1.1.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-sort-class-members": "^1.6.0",
    "hoek": "^6.1.3",
    "husky": "^4.2.1",
    "jest-junit": "^10.0.0",
    "jwt-decode": "^2.2.0",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.19",
    "path": "^0.12.7",
    "react-router-redux": "^4.0.8",
    "request-ip": "^2.1.3",
    "stylelint": "^13.1.0",
    "stylelint-cli": "^1.3.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.2",
    "superagent": "^5.3.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "@hapi/crumb": "^8.0.0",
    "@hapi/hapi": "^19.1.1",
    "@hapi/hoek": "^9.0.3",
    "@material-ui/core": "^4.9.14",
    "arui-feather": "^16.0.3",
    "axios": "^0.21.1",
    "bem-react-classname": "^1.1.0",
    "connected-react-router": "^6.7.0",
    "history": "^4.10.1",
    "jose": "^1.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "4.3.5",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "source-map-support": "^0.5.16",
    "typescript": "^3.7.5",
    "uuid": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{js,jsx}": [
        "eslint"
      ],
      "src/**/*.{js,jsx,ts,tsx}": [
        "eslint"
      ],
      "**/*.test.{js,jsx}": [
        "jest --findRelatedTests"
      ],
      "*.css": "stylelint"
    }
  },
  "jest": {
    "preset": "arui-scripts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "clover"
    ],
    "reporters": [
      "jest-junit",
      "default"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testURL": "http://localhost",
    "setupFiles": [
      "<rootDir>/__tests__/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/setup.js",
      "/.build/"
    ],
    "verbose": true
  },
  "jest-junit": {
    "outputName": "./test-results.xml"
  },
  "aruiScripts": {
    "debug": true,
    "dockerRegistry": "gitlab.alfaleasing.ru:4567/cabinet/alfa-leasing-requests-ui",
    "keepPropTypes": true,
    "baseDockerImage": "heymdall/alpine-node-nginx:12",
    "useServerHMR": true
  }
}
